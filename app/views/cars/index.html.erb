<div class="content">
  <div class="cards">
    <% @cars.each do |car| %>
   <!--  <div class="co-12 colsm-6 col-md-4"> -->
      <div class="card-trip">
       <div class="car-card-image" style="background-image: url('<%= car.photo %>')"></div>
        <div class="card-trip-infos">
          <h2 class="test-color"><%= link_to car.title, car_path(car.id) %></h2>
          <h2 class="card-trip-pricing"><%= car.price %>CHF</h2>
        </div>
        <div class="card-trip-infos">
          <p><%= car.description %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"
    style="width: 100%; height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>