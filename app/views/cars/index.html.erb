<div class="cards">

<% @cars.each do |car| %>
 <!--  <div class="co-12 colsm-6 col-md-4"> -->
    <div class="card-trip">
      <img src="https://media.autoexpress.co.uk/image/private/s--l9NxPLCP--/v1586268650/autoexpress/2020/04/Porsche%20911%20Turbo%20S%20Cabriolet.jpg" />
      <div class="card-trip-infos">
        <div>
          <h2><%= car.title %></h2>
          <p><%= car.description %></p>
        </div>
        <h2 class="card-trip-pricing"><%= car.price %>CHF</h2>
      </div>
      <%= link_to 'Details', car_path(car.id), class: 'btn btn-dark' %>
    </div>
  <% end %>
</div>
